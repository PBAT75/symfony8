{% extends "base.html.twig" %}

{% block title %}{{ categoryName }}{% endblock %}

{% block body %}
    <div>
        <h1>{{ categoryName }}</h1>
            {% for article in articles %}
                <h3>{{ article.id }} - {{ article.title }}</h3>
                <p>{{ article.content }}</p>
            {% endfor %}
    </div>

    <a href="{{ path('homepage') }}">
        Back to homepage
    </a>
{% endblock %}